{% extends "base.html.twig" %}

{% block body %}

    <table class="table table-dark">
        <tr>
            <th>#</th>
            <th>Продукт</th>
            <th>Количество</th>
            <th>Цена</th>
            <th>
                <div align="right">Изтриване</div>
            </th>
        </tr>
        <tbody>
        {% for product in products %}
            <tr>
                <th scope="row">{{ loop.index }}</th>
                <td>{{ product.name }}</td>
                <td>{{ product.quantity }}</td>
                <td>{{ product.price }}</td>
                <td align="right"><a href="{{ path('remove_product', {"id":product.id}) }}">
                        <button class="btn btn-sm btn-danger">Изтрий</button>
                    </a></td>
            </tr>
        {% endfor %}
        <tr>
            <td colspan="5" align="right" style="font-weight: bold">Обща сума: {{ total }}</td>
        </tr>
        {% if products %}
            <tr>
                <td colspan="5" align="right"><a href="{{ path('order_products') }}">
                        <button class="btn btn-success">Поръчай...</button>
                    </a></td>
            </tr>
        {% endif %}
        </tbody>
    </table>


{% endblock %}