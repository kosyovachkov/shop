{% extends 'base.html.twig' %}

{% block body %}

    <form name="authenticate" action="{{ path('login') }}" method="post">

        <div class="form-group row">
            <div class="col-sm-2 col-form-label">
                Email:
            </div>
            <div class="col-sm-4">
                <input class="form-control" type="text" name="_username">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2 col-form-label">
                Парола:
            </div>
            <div class="col-sm-4">
                <input class="form-control" type="text" name="_password">
            </div>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="form-group row">
            <button class="btn btn-primary">Вход</button>
        </div>
    </form>

{% endblock %}