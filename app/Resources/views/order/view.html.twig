{% extends 'base.html.twig' %}

{% block body %}
    <hr>
    <h2>Детайли за поръчка</h2>
    <hr>
    <table class="table table-dark">
        <tr>
            <th>#</th>
            <th>Продукт</th>
            <th>Количество</th>
            <th>Единична цена</th>
            <th><div align="right">Общo</div></th>
        </tr>
        <tbody>
        {% for product in products %}
            <tr>
                <th scope="row">{{ loop.index }}</th>
                <td>{{ product.getName() }}</td>
                <td>{{ product.getQuantity() }}</td>
                <td>{{ product.getPrice() }}</td>
                <td align="right">{{ product.getPrice() * product.getQuantity() }}</td>
            </tr>
        {% endfor %}

        <tr>
            <td colspan="5" align="right" style="font-weight: bold">Обща сума: {{ total }}</td>
        </tr>

        </tbody>
    </table>

{% endblock %}

 {% block logos %}

     <hr class="container" style="border: 1px solid deepskyblue;">

     <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="2500">
         <div class="carousel-inner">
             <div class="carousel-item active">
                 <img class="d-block w-100"
                      src="{{ asset('images/logos/logoshow1.png') }}"

                      alt="First slide">
             </div>
             <div class="carousel-item">
                 <img class="d-block w-100"
                      src="{{ asset('images/logos/logoshow2.png') }}"
                      alt="Second slide">
             </div>
         </div>
     </div>

 {% endblock %}

