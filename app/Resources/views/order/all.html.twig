{% extends "base.html.twig" %}

{% block body %}
    <hr>
    <h2>Моите поръчки</h2>
    <hr>
    <table class="table table-dark">
        <tr>
            <th>#</th>
            <th>Дата</th>
            <th>Брой продукти</th>
            <th>Сума</th>
            <th>
                <div align="right">Операция</div>
            </th>
        </tr>
        <tbody>
        {% for order in orders %}
            <tr>
                <th scope="row">{{ loop.index }}</th>
                <td>{{ order.formatedDate }}</td>
                <td>{{ order.numberOfProducts }}</td>
                <td>{{ order.total }}</td>
                <td align="right"><a href="{{ path('view_order', {"id":order.id}) }}">
                        <button class="btn btn-sm btn-info">Детайли</button>
                    </a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

 {% block logos %}

     <hr class="container" style="border: 1px solid deepskyblue;">

     <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="2500">
         <div class="carousel-inner">
             <div class="carousel-item active">
                 <img class="d-block w-100"
                      src="{{ asset('images/logos/logoshow1.png') }}"

                      alt="First slide">
             </div>
             <div class="carousel-item">
                 <img class="d-block w-100"
                      src="{{ asset('images/logos/logoshow2.png') }}"
                      alt="Second slide">
             </div>
         </div>
     </div>

 {% endblock %}