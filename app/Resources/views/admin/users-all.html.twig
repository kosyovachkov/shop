{% extends 'base.html.twig' %}

{% block body %}
    <h2>Потребители</h2>
    <table class="table table-dark">
        <tr>
            <th>#</th>
            <th>Име</th>
            <th>Фамилия</th>
            <th>Email</th>
            <th><div align="right">Действия</div></th>
        </tr>
        <tbody>
        {% for user in users %}
            <tr>
                <th scope="row">{{ loop.index }}</th>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.email }}</td>
                <td align="right">
                    <a href="{{ path('view-user', {"id":user.id}) }}">
                        <button type="button" class="btn btn-danger btn-xs">Разгледай профил</button>
                    </a>
                </td>
            </tr>


        {% endfor %}
        </tbody>
    </table>
{% endblock %}

