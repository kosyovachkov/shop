{% extends 'base.html.twig' %}

{% block body %}
    <hr>
    <h2>Категории с/без продукти</h2>
    <hr>
<table class="table table-dark">
    <tr>
        <td align="right">
            <a href="{{ path('create_product') }}">
                <button type="button" class="btn btn-success btn-xs">Добави продукт</button>
            </a>
        </td>
    </tr>
</table>

    <table class="table table-dark">
        <tr>
            <th>#</th>
            <th>Категория</th>
            <th>Брой продукти в категорията</th>
            <th><div align="right">Действия</div></th>
        </tr>
        <tbody>

        {% for category in categories %}
            <tr>
                <th scope="row">{{ loop.index }}</th>
                <td>{{ category.getName()}}</td>
                <td>{{ category.getProducts().count }}</td>
                <td align="right">
                    <a href="{{ path('products_in_category', {"id":category.id}) }}">
                        <button type="button" class="btn btn-info btn-xs">Виж продуктите в категорията</button>
                    </a>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
{% endblock %}

