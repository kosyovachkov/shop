{% extends 'base.html.twig' %}

{% block jumboo %}

    {% if app.user is null %}
        <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="{{ asset('uploads/images/0d08c1d57742778a08b3f79280291154.jpeg') }}" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="{{ asset('images/backgrounds/spearfishing1.jpg') }}" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="{{ asset('images/backgrounds/spearfishing2.jpg') }}" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    {% endif %}

{% endblock %}

{% block body %}
<hr>
    <h3>Последно добавени продукти в магазина</h3>
    <hr>
    {% for msg in app.session.flashBag.get("info") %}
        <div class="alert alert-danger">
            <h3>{{ msg }}</h3>
        </div>
    {% endfor %}

    <div class="row">
        {% for product in products %}
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <a href="{{ path('view_product', {"id":product.id}) }}">
                        <img class="card-img-top" src="{{ asset('uploads/images/' ~ product.image) }}" width="229"
                             height="260"
                             alt="Card image cap">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }} <span class="badge badge-success">Ново!</span></h5>
                        <h5 class="card-title" style="color: red; font-weight: bold">{{ product.price }} лв.</h5>
                        <p class="card-text">{{ product.introText }}...<br>>> <a
                                    href="{{ path('view_product', {"id":product.id}) }}">Виж цялото описание</a> <<</p>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group">
                            <a href="{{ path('add_product_to_cart', {"id":product.id}) }}">
                                <button type="button" class="btn btn-md btn-outline-info">Разгледай</button>
                            </a>

                            <a href="{{ path('add_to_cart', {"id":product.id}) }}">
                                <button type="button" class="btn btn-md btn-outline-danger">Добави в количката</button>
                            </a>

                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <hr style="margin-bottom: 30px">

    {% block offers %}

        <div class="container rounded border border-primary" style="padding: 30px;">
            <div class="row">
                <h2>Най-купувани продукти</h2>
            </div>
            <div class="row">
                {% for product in products %}
                    <div class="col-md-4">
                        <h3 style="text-align: center"> {{ product.name }}</h3>
                        <img class="rounded-circle" width="350px" src="{{ asset('uploads/images/' ~ product.image) }}">
                        <div style="text-align: center">
                            <div class="btn-group" style="margin-top: 20px">
                                <a href="{{ path('view_product', {"id":product.id}) }}">
                                    <button type="button" class="btn btn-md btn-outline-info">Разгледай</button>
                                </a>

                                <a href="{{ path('add_to_cart', {"id":product.id}) }}">
                                    <button type="button" class="btn btn-md btn-outline-danger">Добави в количката
                                    </button>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        </div>

    {% endblock %}
{% endblock %}
