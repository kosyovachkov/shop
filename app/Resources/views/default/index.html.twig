{% extends 'base.html.twig' %}

{% block body %}
    <div class="container body-content">
        <div class="row">
            {% for product in products %}
                <div class="col-md-6">
                    <article>
                        <header>
                            <h2>{{ product.name}}</h2>
                        </header>

                        <p>
                            {{ product.price }}
                        </p>

                        <p>
                            <a href="{{ path('view_product', {"id": product.id}) }}">
                                <img src="{{ asset('uploads/images/'~product.image) }}" width='300px'></a>
                        </p>

                        <small class="author">
                            {{ product.category.name }}
                        </small>

                        <footer>
                            <div class="pull-right">
                                <a class="btn btn-default btn-xs"
                                   href={{ path('view_product', {"id":product.id}) }}>Read more &raquo;</a>
                            </div>
                        </footer>
                    </article>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
